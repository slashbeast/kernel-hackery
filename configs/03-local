## Builtin the core drivers for the module-less initramfs boot.
## Also add few configuration params of choice.

## nvme
CONFIG_NVME_CORE=y
CONFIG_BLK_DEV_NVME=y

## filesystems
CONFIG_XFS_FS=y
CONFIG_F2FS_FS=y
CONFIG_VFAT_FS=y
CONFIG_EXFAT_FS=y
CONFIG_OVERLAY_FS=y

## device mapper, luks, raid ...
CONFIG_SCSI_MPT3SAS=y
CONFIG_TRUSTED_KEYS=y
CONFIG_MD_RAID0=y
CONFIG_MD_RAID1=y
CONFIG_MD_RAID10=y
CONFIG_MD_RAID456=y
CONFIG_DM_BIO_PRISON=y
CONFIG_DM_PERSISTENT_DATA=y
CONFIG_DM_UNSTRIPED=y
CONFIG_DM_CRYPT=y
CONFIG_DM_THIN_PROVISIONING=y
CONFIG_DM_CACHE=y
CONFIG_DM_CACHE_SMQ=y
CONFIG_DM_WRITECACHE=y
CONFIG_DM_CLONE=yH
CONFIG_DM_LOG_USERSPACE=y
CONFIG_DM_RAID=y
CONFIG_DM_MULTIPATH=y
CONFIG_DM_MULTIPATH_QL=y
CONFIG_DM_MULTIPATH_ST=y
CONFIG_DM_MULTIPATH_HST=y
CONFIG_DM_DELAY=y
CONFIG_DM_DUST=y
CONFIG_DM_FLAKEY=y
CONFIG_DM_VERITY=y
CONFIG_DM_SWITCH=y
CONFIG_DM_LOG_WRITES=y
CONFIG_DM_INTEGRITY=y
CONFIG_DM_ZONED=y
CONFIG_DM_EBS=y

## Network cards
CONFIG_IGC=y
CONFIG_R8169=y

## Disable debug symbols
# CONFIG_DEBUG_INFO is not set
# CONFIG_DEBUG_INFO_BTF is not set

## Disable X86_X32
# CONFIG_X86_X32 is not set

## Set the default-default hostname.
CONFIG_DEFAULT_HOSTNAME="(none)"

## SD cards reader
CONFIG_MISC_RTSX=y
CONFIG_MISC_RTSX_PCI=y
CONFIG_MISC_RTSX_USB=y
CONFIG_MMC_SDHCI=y
